{
  "app-id": "net.sourceforge.VMPK",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.8",
  "sdk": "org.kde.Sdk",
  "command": "vmpk",
  "rename-icon": "vmpk",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    /* PulseAudio */
    "--socket=pulseaudio",
    /* Pipewire */
    "--filesystem=xdg-run/pipewire-0",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    {
      "name": "fluidsynth",
      "buildsystem": "cmake-ninja",
      "cleanup": [
          "/bin",
          "/include",
          "/lib/cmake",
          "/lib/pkgconfig",
          "/share/man",
          "*.so"
      ],
      "sources": [
          {
              "type": "archive",
              "url": "https://github.com/FluidSynth/fluidsynth/archive/v2.4.0.tar.gz",
              "sha256": "fd4d216a3030abc56a339985ab0506328660cd77b2d71dd98c240c58c03d8f7f"
          }
      ]
    },
    {
      "name": "sonivox",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_SONIVOX_STATIC=OFF",
        "-DBUILD_SONIVOX_SHARED=ON",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/pedrolcl/sonivox/archive/v3.6.14.tar.gz",
          "sha256": "216171c5bbe4f5a9524d73a2ee9e7e597c71a040e5d7c9e35b92c9dc459c2985"
        }
      ]
    },
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_ALSA=ON",
        "-DBUILD_FILE=OFF",
        "-DBUILD_RT=ON",
        "-DBUILD_WIDGETS=ON",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.9.1/drumstick-2.9.1.tar.gz",
          "sha256": "a7049333d5411faf4d91a81ae666746106b578897fc0713a84325f65fdd06ffb"
        }
      ]
    },
    {
      "name": "vmpk",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DBUILD_DOCS=OFF" ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/vmpk/vmpk/0.9.0/vmpk-0.9.0.tar.bz2",
          "sha256": "c47ee14cbf1903075440acad729d8e0e02e4c98606183756676eeac1a1aebcd9"
        }
      ]
    }
  ]
}
