{
  "app-id": "net.sourceforge.VMPK",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.2",
  "sdk": "org.kde.Sdk",
  "command": "vmpk",
  "rename-icon": "vmpk",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/fluidsynth2.json",
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_ALSA=ON",
        "-DBUILD_FILE=OFF",
        "-DBUILD_RT=ON",
        "-DBUILD_WIDGETS=ON",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.6.0/drumstick-2.6.0.tar.bz2",
          "sha256": "f2bf804b97a63f001b28eedebc87897756e222ea1fa16f26ef244fe2695ce98a"
        }
      ]
    },
    {
      "name": "vmpk",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DBUILD_DOCS=OFF" ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/vmpk/vmpk/0.8.7/vmpk-0.8.7.tar.bz2",
          "sha256": "d32d574be2376e636b27ae4b4f42f24ddf1a48b5d59556451436708315432c69"
        }
      ]
    }
  ]
}
