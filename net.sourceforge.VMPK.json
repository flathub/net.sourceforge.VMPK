{
  "app-id": "net.sourceforge.VMPK",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15",
  "sdk": "org.kde.Sdk",
  "command": "vmpk",
  "rename-icon": "vmpk",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/fluidsynth2.json",
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_DOCS=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.1.1/drumstick-2.1.1.tar.bz2",
          "sha256": "575e095d136406dd5b350e4f66247145b12ecb889784251955b4bc77ff249f1a"
        }
      ]
    },
    {
      "name": "vmpk",
      "buildsystem": "cmake-ninja",
      "post-install": [
        "install -Dm644 -t /app/share/metainfo/ net.sourceforge.VMPK.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/vmpk/vmpk/0.8.2/vmpk-0.8.2.tar.bz2",
          "sha256": "428d02f901cd7987616b67e005048211ca4da87ec4907c5624b3a911a42962cf"
        }
      ]
    }
  ]
}
