{
  "app-id": "net.sourceforge.VMPK",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.6",
  "sdk": "org.kde.Sdk",
  "command": "vmpk",
  "rename-icon": "vmpk",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/fluidsynth2.json",
    {
      "name": "sonivox",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_SONIVOX_STATIC=OFF",
        "-DBUILD_SONIVOX_SHARED=ON",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/pedrolcl/sonivox/archive/v3.6.12.tar.gz",
          "sha256": "23a7f29c617e791dfcb50b75eef41464e4bf3fca15b19da395a64373ff5d8456"
        }
      ]
    },
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_ALSA=ON",
        "-DBUILD_FILE=OFF",
        "-DBUILD_RT=ON",
        "-DBUILD_WIDGETS=ON",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.9.0/drumstick-2.9.0.tar.gz",
          "sha256": "b2692d3f96a1537ecf3a81dcad5c88ff700fc0af400dc2570cce19cb6cd1023a"
        }
      ]
    },
    {
      "name": "vmpk",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DBUILD_DOCS=OFF" ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/vmpk/vmpk/0.9.0/vmpk-0.9.0.tar.bz2",
          "sha256": "c47ee14cbf1903075440acad729d8e0e02e4c98606183756676eeac1a1aebcd9"
        }
      ]
    }
  ]
}
