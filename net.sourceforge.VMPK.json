{
  "app-id": "net.sourceforge.VMPK",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.8",
  "sdk": "org.kde.Sdk",
  "command": "vmpk",
  "rename-icon": "vmpk",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    /* PulseAudio */
    "--socket=pulseaudio",
    /* Pipewire */
    "--filesystem=xdg-run/pipewire-0",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    {
      "name": "fluidsynth",
      "buildsystem": "cmake-ninja",
      "cleanup": [
          "/bin",
          "/include",
          "/lib/cmake",
          "/lib/pkgconfig",
          "/share/man",
          "*.so"
      ],
      "sources": [
          {
              "type": "archive",
              "url": "https://github.com/FluidSynth/fluidsynth/archive/v2.4.1.tar.gz",
              "sha256": "d1e64155ac902116ed3d4dea512719d8c04ab3877db2e8fb160284379f570a2f"
          }
      ]
    },
    {
      "name": "sonivox",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_SONIVOX_STATIC=OFF",
        "-DBUILD_SONIVOX_SHARED=ON",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/pedrolcl/sonivox/archive/v3.6.15.tar.gz",
          "sha256": "3e54cf11ecdc7ffd9fb24f0ba3319b6e0fe3df56f5e3082f2847666a31be3ff3"
        }
      ]
    },
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_ALSA=ON",
        "-DBUILD_FILE=OFF",
        "-DBUILD_RT=ON",
        "-DBUILD_WIDGETS=ON",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.10.0/drumstick-2.10.0.tar.gz",
          "sha256": "92f5fc2a94b8c9067200897fd14027f707bf0103871ea942e388f9afe95e0f34"
        }
      ]
    },
    {
      "name": "vmpk",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DBUILD_DOCS=OFF" ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/vmpk/vmpk/0.9.1/vmpk-0.9.1.tar.bz2",
          "sha256": "3bfb888355aae87c2dec9e409285d0b21061acaad075f5536dbf2aafbb6d48dc"
        }
      ]
    }
  ]
}
